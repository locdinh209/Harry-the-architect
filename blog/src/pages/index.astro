---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const base = import.meta.env.BASE_URL;

// Get all blog posts sorted by date
const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const featuredPost = posts[0];
const morePosts = posts.slice(1, 4);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Hero Section */
			.hero {
				text-align: center;
				padding: 4rem 1rem 3rem;
				background: linear-gradient(180deg, rgba(229, 233, 240, 0.5) 0%, rgba(255, 255, 255, 0) 100%);
			}
			
			.hero-title {
				font-size: 2.5rem;
				font-weight: 700;
				color: rgb(var(--black));
				margin-bottom: 0.5rem;
			}
			
			.hero-subtitle {
				font-size: 1.25rem;
				color: rgb(var(--gray-dark));
				margin-bottom: 0.5rem;
				font-weight: 500;
			}
			
			.hero-description {
				font-size: 1.1rem;
				color: rgb(var(--gray));
				max-width: 600px;
				margin: 0 auto 2rem;
				line-height: 1.6;
			}
			
			.hero-cta {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}
			
			.btn {
				display: inline-block;
				padding: 0.75rem 1.5rem;
				border-radius: 8px;
				text-decoration: none;
				font-weight: 600;
				transition: all 0.2s ease;
			}
			
			.btn-primary {
				background: var(--accent);
				color: white;
			}
			
			.btn-primary:hover {
				background: var(--accent-dark);
				transform: translateY(-2px);
			}
			
			.btn-secondary {
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
			}
			
			.btn-secondary:hover {
				background: rgb(var(--gray));
				color: white;
				transform: translateY(-2px);
			}
			
			/* Content Container */
			.container {
				max-width: 960px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			
			/* Section Titles */
			.section-title {
				font-size: 1.25rem;
				font-weight: 600;
				color: rgb(var(--gray));
				margin-bottom: 1.5rem;
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}
			
			/* Featured Article */
			.featured-section {
				padding: 2rem 0;
			}
			
			.featured-card {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 2rem;
				background: #f8f9fa;
				border-radius: 16px;
				overflow: hidden;
				text-decoration: none;
				transition: all 0.3s ease;
			}
			
			.featured-card:hover {
				box-shadow: var(--box-shadow);
				transform: translateY(-4px);
			}
			
			.featured-image {
				height: 100%;
				object-fit: cover;
			}
			
			.featured-content {
				padding: 2rem;
				display: flex;
				flex-direction: column;
				justify-content: center;
			}
			
			.featured-label {
				font-size: 0.75rem;
				font-weight: 600;
				color: var(--accent);
				text-transform: uppercase;
				letter-spacing: 0.1em;
				margin-bottom: 0.5rem;
			}
			
			.featured-title {
				font-size: 1.75rem;
				font-weight: 700;
				color: rgb(var(--black));
				margin-bottom: 0.75rem;
				line-height: 1.2;
			}
			
			.featured-description {
				color: rgb(var(--gray-dark));
				margin-bottom: 1rem;
				line-height: 1.6;
			}
			
			.featured-meta {
				font-size: 0.875rem;
				color: rgb(var(--gray));
			}
			
			/* Article Grid */
			.articles-section {
				padding: 2rem 0 3rem;
			}
			
			.articles-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 1.5rem;
			}
			
			.article-card {
				background: #f8f9fa;
				border-radius: 12px;
				overflow: hidden;
				text-decoration: none;
				transition: all 0.3s ease;
			}
			
			.article-card:hover {
				box-shadow: var(--box-shadow);
				transform: translateY(-4px);
			}
			
			.article-card img {
				width: 100%;
				height: 160px;
				object-fit: cover;
			}
			
			.article-card-content {
				padding: 1.25rem;
			}
			
			.article-card-title {
				font-size: 1.1rem;
				font-weight: 600;
				color: rgb(var(--black));
				margin-bottom: 0.5rem;
				line-height: 1.3;
			}
			
			.article-card-meta {
				font-size: 0.8rem;
				color: rgb(var(--gray));
			}
			
			/* Expertise Pillars */
			.pillars-section {
				padding: 2rem 0 3rem;
				background: linear-gradient(0deg, rgba(229, 233, 240, 0.3) 0%, rgba(255, 255, 255, 0) 100%);
			}
			
			.pillars-grid {
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 1.5rem;
			}
			
			.pillar-card {
				text-align: center;
				padding: 1.5rem 1rem;
			}
			
			.pillar-icon {
				font-size: 2rem;
				margin-bottom: 0.75rem;
			}
			
			.pillar-title {
				font-size: 1rem;
				font-weight: 600;
				color: rgb(var(--black));
				margin-bottom: 0.25rem;
			}
			
			.pillar-description {
				font-size: 0.85rem;
				color: rgb(var(--gray));
			}
			
			/* Responsive */
			@media (max-width: 768px) {
				.hero-title {
					font-size: 2rem;
				}
				
				.featured-card {
					grid-template-columns: 1fr;
				}
				
				.featured-image {
					height: 200px;
				}
				
				.pillars-grid {
					grid-template-columns: repeat(2, 1fr);
				}
			}
			
			@media (max-width: 480px) {
				.hero {
					padding: 2rem 1rem;
				}
				
				.pillars-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Hero Section -->
		<section class="hero">
			<h1 class="hero-title">Harry | The Architect</h1>
			<p class="hero-subtitle">Staff Architect building intelligent systems with Multi-Agent AI</p>
			<p class="hero-description">
				I write about AI architecture patterns that actually work in production. 
				From orchestration to quality gates‚Äîpractical insights you can use.
			</p>
			<div class="hero-cta">
				<a href={`${base}blog/`} class="btn btn-primary">Read the Blog ‚Üí</a>
				<a href={`${base}about/`} class="btn btn-secondary">About Me</a>
			</div>
		</section>
		
		<main class="container">
			<!-- Featured Article -->
			{featuredPost && (
				<section class="featured-section">
					<h2 class="section-title">Featured Article</h2>
					<a href={`${base}blog/${featuredPost.id}/`} class="featured-card">
						{featuredPost.data.heroImage && (
							<Image 
								src={featuredPost.data.heroImage} 
								alt="" 
								class="featured-image"
								width={480}
								height={300}
							/>
						)}
						<div class="featured-content">
							<span class="featured-label">Latest</span>
							<h3 class="featured-title">{featuredPost.data.title}</h3>
							<p class="featured-description">{featuredPost.data.description}</p>
							<p class="featured-meta">
								<FormattedDate date={featuredPost.data.pubDate} />
							</p>
						</div>
					</a>
				</section>
			)}
			
			<!-- More Articles -->
			{morePosts.length > 0 && (
				<section class="articles-section">
					<h2 class="section-title">More Articles</h2>
					<div class="articles-grid">
						{morePosts.map((post) => (
							<a href={`${base}blog/${post.id}/`} class="article-card">
								{post.data.heroImage && (
									<Image src={post.data.heroImage} alt="" width={400} height={200} />
								)}
								<div class="article-card-content">
									<h3 class="article-card-title">{post.data.title}</h3>
									<p class="article-card-meta">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</div>
							</a>
						))}
					</div>
				</section>
			)}
		</main>
		
		<!-- Expertise Pillars -->
		<section class="pillars-section">
			<div class="container">
				<h2 class="section-title">What I Write About</h2>
				<div class="pillars-grid">
					<div class="pillar-card">
						<div class="pillar-icon">üéº</div>
						<h3 class="pillar-title">Multi-Agent Systems</h3>
						<p class="pillar-description">Orchestration patterns that scale</p>
					</div>
					<div class="pillar-card">
						<div class="pillar-icon">üèóÔ∏è</div>
						<h3 class="pillar-title">AI Architecture</h3>
						<p class="pillar-description">Design decisions that matter</p>
					</div>
					<div class="pillar-card">
						<div class="pillar-icon">üîß</div>
						<h3 class="pillar-title">Production Patterns</h3>
						<p class="pillar-description">Quality gates & resilience</p>
					</div>
					<div class="pillar-card">
						<div class="pillar-icon">üìö</div>
						<h3 class="pillar-title">Practical Tutorials</h3>
						<p class="pillar-description">From concept to code</p>
					</div>
				</div>
			</div>
		</section>
		
		<Footer />
	</body>
</html>
